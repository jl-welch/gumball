{
  "name": "gumball-ui",
  "version": "0.0.1",
  "description": "A responsive UI framework with BEM style components",
  "repository": {
    "type": "git",
    "url": "git://github.com/jl-welch/gumball.git"
  },
  "bugs": {
    "url": "https://github.com/jl-welch/gumball/issues"
  },
  "main": "dist/javascripts/gumball.min.js",
  "scripts": {
    "css-build": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/stylesheets/gumball.scss dist/stylesheets/gumball.css",
    "css-watch": "nodemon --watch src/stylesheets/ --ext scss --exec \"npm run css-build\"",
    "js-build": "npm run js-lint && rollup --config build/rollup.config.js && npm run js-minify",
    "js-watch": "nodemon --watch src/javascripts/ --ext js --exec \"npm run js-build\"",
    "js-minify": "uglifyjs dist/javascripts/gumball.js -o dist/javascripts/gumball.min.js -c -m",
    "js-lint": "eslint src/javascripts --cache --cache-location .cache/.eslintcache",
    "js-lint-fix": "npm run eslint --silent -- --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.0.1",
    "node-sass": "^4.12.0",
    "prettier": "^1.17.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.2.3"
  },
  "keywords": [
    "gumball",
    "sass",
    "css",
    "bem",
    "ui",
    "javascript"
  ],
  "author": "James Welch <dev.jlw@gmail.com>",
  "license": "MIT"
}
